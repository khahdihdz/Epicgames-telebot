services:
  - type: web
    name: epic-games-bot
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: python bot.py
    envVars:
      - key: TELEGRAM_TOKEN
        sync: false
      - key: ADMIN_ID
        sync: false
      - key: PYTHON_VERSION
        value: 3.11.0
    disk:
      name: bot-data
      mountPath: /opt/render/project/src
      sizeGB: 1